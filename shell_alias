# Function to go back any number of dirs
function bk()
{
    if [[ ! -z "$1" ]] && [[ $1 =~ ^[0-9]+$ ]]; then
        PARENT="./"

        for (( i = 0; i < $1; i++ )); do
            PARENT="${PARENT}../"
        done
        cd "$PARENT"
    elif [[ -z "$1" ]]; then
        cd ..
    else
        echo "Unexpected arg $1"
        return 1
    fi
}

