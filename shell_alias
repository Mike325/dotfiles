if hash realpath 2>/dev/null; then
    function grp()
    {
        if [[ ! -z "$1" ]]; then
            realpath "$@"
        else
            realpath "."
        fi
    }
else
    # TODO Optimize code for file management
    function grp()
    {
        if [[ ! -z "$1" ]]; then
            FULL_PATH="$1"
            ROOT_PATH="${FULL_PATH%/*}"
            FILE_PATH="${FULL_PATH##*/}"

            if [[ -f "$FULL_PATH" ]]; then
                cd "$ROOT_PATH" 2> /dev/null

                if [[ $? -eq 0 ]]; then
                    echo "$(pwd -P)/$FILE_PATH"
                    cd - 1> /dev/null
                else
                    echo "$(pwd -P)/$FILE_PATH"
                fi

            else
                ROOT_PATH="$1"

                cd "$ROOT_PATH" 1> /dev/null

                if [[ $? -eq 0 ]]; then
                    echo "$(pwd -P)"
                    cd - 1> /dev/null
                fi
            fi

        else
            pwd -P
        fi
    }
fi

# Init original path with HOME dir
ORIGINAL_PATH="$(pwd)"

# Move to the realpath version of the curren working dir
function crp()
{
    # Save the current path
    ORIGINAL_PATH="$(pwd)"
    cd "$(grp)"
}

# Go back to the last sym path or $HOME
function gobk()
{
    cd "$ORIGINAL_PATH"
}

