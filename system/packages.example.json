{
    "name": "archlinux",
    "version": "17.0.2",
    "arch": "x86_64",
    "python_version": "3.6.4",
    "global": [
        "curl",
        "git",
        "wget",
        "gcc",
        "make",
        "sed",
        "htop",
        "cmake",
        "ctags",
        "sl",
        "unzip"
    ],
    "main" : {
        "name": "pacman",
        "args": "-S",
        "sudo": true,
        "pkgs": [
            "base-devel",
            "python-pip",
            "python2-pip",
            "neovim",
            "docker",
            "clang",
            "jdk8-openjdk",
            "the_silver_searcher",
            "shellcheck"
        ]
    },
    "secondary" : {
        "name": "yaourt",
        "args": "-S",
        "sudo": false,
        "pkgs": [
            "spotify",
            "libtinfo",
            "ncurses5-compat-libs",
            "arc-gtk-theme",
            "arc-firefox-theme",
            "jdk",
            "nextcloud-client"
        ]
    }
}
