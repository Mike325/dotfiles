#!/usr/bin/env bash

#   Author: Awesome work from https://github.com/esc/git-stats
#   Description: Get statistics of the current git dir (CWD)
#
#                                     -`
#                     ...            .o+`
#                  .+++s+   .h`.    `ooo/
#                 `+++%++  .h+++   `+oooo:
#                 +++o+++ .hhs++. `+oooooo:
#                 +s%%so%.hohhoo'  'oooooo+:
#                 `+ooohs+h+sh++`/:  ++oooo+:
#                  hh+o+hoso+h+`/++++.+++++++:
#                   `+h+++h.+ `/++++++++++++++:
#                            `/+++ooooooooooooo/`
#                           ./ooosssso++osssssso+`
#                          .oossssso-````/osssss::`
#                         -osssssso.      :ssss``to.
#                        :osssssss/  Mike  osssl   +
#                       /ossssssss/   8a   +sssslb
#                     `/ossssso+/:-        -:/+ossss'.-
#                    `+sso+:-`                 `.-/+oso:
#                   `++:.                           `-/+/
#                   .`   github.com/mike325/dotfiles   `/

NAME="$0"
NAME="${NAME##*/}"
NAME="${NAME##*-}"

function help_user() {
    echo ""
    echo "  Script to pull changes from a repository"
    echo ""
    echo "  The script use git svn rebase and if it fails tries with git pull."
    echo "  It passes all the args to the git commands"
    echo ""
    echo " NOTE: Since I don't use git svn too much, if any argument is given to the script"
    echo "       it will automatically switch to git pull"
    echo ""
    echo "  Usage:"
    echo "      $NAME [OPTIONAL]"
    echo "          Ex."
    echo "          $ git $NAME"
    echo ""
    echo "      Optional Flags"
    echo "          -h, --help"
    echo "              Display help and exit. If you are seeing this, that means that you already know it (nice)"
    echo ""
}

function __parse_args() {
    local arg="$1"
    local name="$2"

    local pattern="^--$name[=][a-zA-Z0-9./]+$"
    if [[ ! -z "$3" ]]; then
        local pattern="^--$name[=]$3$"
    fi

    if [[ $arg =~ $pattern ]]; then
        local left_side="${arg#*=}"
        echo "$left_side"
    else
        echo "$arg"
    fi
}

function warn_msg() {
    WARN_MESSAGE="$1"
    printf "[!]     ---- Warning!!! %s \n" "$WARN_MESSAGE"
}

function error_msg() {
    ERROR_MESSAGE="$1"
    printf "[X]     ---- Error!!!   %s \n" "$ERROR_MESSAGE" 1>&2
}

function status_msg() {
    STATUS_MESSAGGE="$1"
    printf "[*]     ---- %s \n" "$STATUS_MESSAGGE"
}

for key in "$@"; do
    case "$key" in
        -h|--help)
            help_user
            exit 0
            ;;
    esac
done

if [[ -z "$1" ]]; then
    if git svn fetch 2>/dev/null; then
        git svn rebase "$@"
    else
        git pull "$@"
    fi
else
    git pull "$@"
fi
